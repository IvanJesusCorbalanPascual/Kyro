<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/fondo_primal">

    <ImageView
        android:id="@+id/imgKyroLogo"
        android:layout_width="308dp"
        android:layout_height="103dp"
        android:contentDescription="Logo Kyro Pequeño"
        android:scaleType="fitCenter"
        android:src="@drawable/portrait_kyro_no_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Maximiza tu tiempo"
        android:textColor="#000000"
        android:textSize="24sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imgKyroLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Organiza tus tareas, vence a la procrastinación."
        android:textColor="#666666"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewBackgroundDeco"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgMainIllustration"
        app:layout_constraintEnd_toEndOf="@+id/imgMainIllustration"
        app:layout_constraintStart_toStartOf="@+id/imgMainIllustration"
        app:layout_constraintTop_toTopOf="@+id/imgMainIllustration" />

    <ImageView
        android:id="@+id/imgMainIllustration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Ilustración Principal"
        android:scaleType="fitCenter"
        android:src="@drawable/primal_1"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitulo"
        app:layout_constraintBottom_toTopOf="@+id/layoutDots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnNext">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/dot"
            android:state_selected="true" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/dot" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/dot" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/fondo_azul_oscuro_kyro"
        android:src="@drawable/right_arrow"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>